<section class="change-password">
  <h1 class="title"> Change Password </h1>
  {{#if message}} <p> {{message}} </p> {{/if}}
  <form id="pwdForm" action="/patient/updatePwd" method="POST">
    <div>
      <label class="form-label"> Current Password: </label>
      <input type="password" name="oldPwd" placeholder="Enter current password" required />
    </div>
    <br />
    <div>
      <label class="form-label"> New Password: </label>
      <input type="password" name="newPwd" placeholder="Enter new password" required />
    </div>
    <br />
    <div>
      <label class="form-label"> Confirm Password: </label>
      <input type="password" name="confirm" placeholder="Confirm new password" required />
    </div>
  </form>
  <br />

  <div>
    <button class = "submit-button" type="submit" form="pwdForm"> Change </button><br/>
    <button class = "back-button" onclick="history.back()"> Back </button>
  </div>
</section>