<div>
  <h1>
    Patient {{records.patientId}}'s Recorded Data in {{records.recordDate}}
  </h1>
  <table border="1">
    <tr>
      <th> Data Name </th>
      <th> Data Value </th>
      <th> Data Recorded Date </th>
      <th> Data Status </th>
      <th> Comment </th>
    </tr>
    <tr>
      <td> {{records.data.bgl.fullName}} </td>
      <td> {{records.data.bgl.value}} </td>
      <td> {{records.data.bgl.createdAt}} </td>
      <td> {{records.data.bgl.status}} </td>
      <td> {{records.data.bgl.comment}} </td>
    </tr>
    <tr>
      {{#with records.data.weight}}
      <td> {{fullName}} </td>
      <td style="background-color: red"> {{value}} </td>
      <td> {{createdAt}} </td>
      
      <td > {{status}} </td>
      
      <td > {{comnent}} </td>
      
      {{/with}}
    </tr>

  </table>

