<h1>Patient information</h1>
{{#with onePatient}}
<ul>
    <li>{{this._id}}</li>
    <li>{{this.firstName}}</li>
    <li>{{this.lastName}} </li>
</ul>
{{/with}}


<h1>Entry</h1>
<form action="/patient/{{this._id}}" method="POST">
    <label> Blood glucose level (in nmol/L):</label>
    <input type="number" name="bgl" min="0" max="999" /></br>
    <label> Weight (in kg):</label>
    <input type="number" placeholder="" name="weight" min="0" max="999" /></br>
    <label> Doses of insulin taken (number of doses)</label>
    <input type="number" placeholder="" name="doit" min="0" max="999" /></br>
    <label> Exercise (step count)</label>
    <input type="number" placeholder="" name="exercise" min="0" max="999" /></br>
    <label> Comment</label>
    <input type="text" name="comment" />
    <input type="Submit" /></br>
</form>


<h1>History</h1>
<table border="1">
    <tr>
        <th style="text-align: center"> Date </th>
        <th style="text-align: center"> B.G.L (in mmol\L) </th>
        <th style="text-align: center"> Weight(Kg) </th>
        <th style="text-align: center"> Insulin Count </th>
        <th style="text-align: center"> Exercise (S.C) </th>
        <th style="text-align: center"> Comment </th>
    </tr>


    {{#each record}}
    <tr>
        <td style="text-align: center">{{this.recordDate}} </td>
        <td style="text-align: center">{{this.bgl_value}} </td>
        <td style="text-align: center">{{this.weight_value}} </td>
        <td style="text-align: center">{{this.doit_value}} </td>
        <td style="text-align: center">{{this.ex_value}} </td>
        <td style="text-align: center">{{this.cmt_value}} </td>
    </tr>
    {{/each}}


</table>